[Unit]
Description="uWSGI server instance configured to serve {{ project_name }}"
After=network.target

[Service]
User={{ user }}
Group=www-data
WorkingDirectory={{ project_dir }}
Environment="PATH={{ hostvars.host.ansible_local.venv.path }}/bin"
ExecStart={{ hostvars.host.ansible_local.venv.path}}/bin/uwsgi --ini {{ project_name }}.ini

[Install]
WantedBy=multi-user.target
